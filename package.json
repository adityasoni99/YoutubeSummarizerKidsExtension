{
  "name": "youtube-summarizer-kids-extension",
  "version": "1.0.0",
  "description": "Chrome Extension that creates kid-friendly summaries of YouTube videos with Q&A pairs and simple explanations",
  "main": "manifest.json",
  "scripts": {
    "lint": "eslint js/**/*.js",
    "format": "prettier --write \"**/*.{js,html,css,json,md}\"",
    "build": "npm run lint && npm run format",
    "package": "zip -r youtube-summarizer-extension.zip . -x \"node_modules/*\" \"*.git*\" \"package*.json\" \"*.md\" \".eslint*\" \".prettier*\"",
    "dev": "echo 'Load the extension folder in Chrome://extensions with Developer Mode enabled'",
    "test": "echo 'Manual testing required - load extension and test on YouTube videos'"
  },
  "keywords": [
    "chrome-extension",
    "youtube",
    "kids",
    "education",
    "summarization",
    "ai",
    "gemini",
    "manifest-v3",
    "pocketflow"
  ],
  "author": "YouTube Summarizer Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/youtube-summarizer-kids-extension"
  },
  "homepage": "https://github.com/your-username/youtube-summarizer-kids-extension#readme",
  "bugs": {
    "url": "https://github.com/your-username/youtube-summarizer-kids-extension/issues"
  },
  "devDependencies": {
    "eslint": "^8.50.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "browserslist": [
    "Chrome >= 88"
  ],
  "extension": {
    "type": "chrome-extension",
    "manifest_version": 3,
    "target_browser": "chrome",
    "min_chrome_version": "88"
  }
}